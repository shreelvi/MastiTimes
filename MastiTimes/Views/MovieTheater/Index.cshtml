@model IEnumerable<MastiTimes.Models.MovieTheater>

@{
    Layout = null;
}
@{
    ViewData["Title"] = "MovieTheater Admin";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color:#563d7c;">
    <!-- Navbar content -->
    <a class="navbar-brand" asp-controller="Admin" asp-action="Index" style="color:orange">Masti Times Admin</a>
</nav>

<p style="color:blue">
    @ViewData["MovieTheaterAdd"]
</p>

<p style="color:red">
    @ViewData["MovieTheaterDelete"]
</p>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Theater Name
            </th>
            <th>
                Theater Location
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NowPlaying)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShowTime)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theater.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theater.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NowPlaying)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShowTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

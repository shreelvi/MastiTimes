@model List<MastiTimes.Models.MovieTheater>
@{
    ViewData["Title"] = "Test";
}
@{
    var temp = 0;
    var count = 1;
    var movieTemp = 0;
    int[] showCount = new int[100];
    var demo = "";
 }

<style>
    
    .content {
        padding: 0 18px;
        display: none;
        overflow: hidden;
        background-color: #f1f1f1;
    }
</style>




<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>



<div class="card">
    <h2>Now Playing Movies</h2>
    @foreach (var movietheater in Model)
    {
        if (movietheater.TheaterID == temp)
        {
            demo = "demo" + movietheater.TheaterID;
            if (movietheater.MovieID != movieTemp)
            {
                <div id="@demo" class="collapse">
                    <h4>@movietheater.Movie.Title </h4><br />
                    <h5>@movietheater.Movie.DateReleased</h5>

                    @if (showCount[movietheater.MovieID] < 1)
                    {
                        @foreach (string time in movietheater.ShowTimes)
                        {
                            showCount[movietheater.MovieID] += 1;
                            <p>@time</p>
                        }

                    }
                    else
                    {

                    }
                </div>
            }
            else
            {
                <div class="content ">

                </div>
            }
            movieTemp = movietheater.MovieID;
        }
        else
        {

            <div class="card-block">
                <h3 class="card-title"><a href="#">@movietheater.Theater.Name</a></h3>
                <p class="card-text">
                    <a href="#">Read Reviews </a> |
                    <a href="#">Rate Theater</a><br />
                    @movietheater.Theater.Address<br />
                    <a href="#">@movietheater.Theater.PhoneNumber</a>|
                    <a href="#">View map</a>
                </p>
            </div>
            <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo, #demo1">
                View Showtimes
            </button>
        }
        temp = movietheater.TheaterID;
    }
</div>


